.row
each project in projects
   a(href=project.path)
      .col-sm-6.col-md-4.col-lg-3
         .panel.panel-primary.project-panel
            if project.img && project.img.small
               .panel-heading(style='background-image: url(' + project.img.small + ')')
                  h2.text-center.panel-title= project.title
            else
               .panel-heading
                  h2.text-center.panel-title= project.stars + ' - ' + project.title
                  //h2.text-center.panel-title= project.title
            .panel-body
               p= project.short
               if project.tags
                  small
                     each tag, index in project.tags
                        span= tag
                        unless index == project.tags.length - 1
                           |  &middot
                           span=' '